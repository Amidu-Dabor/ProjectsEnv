package SwapStrings;

public class SwapConfig {

	// Declaration of variables
	String firstName, lastName, names;

	// Set names
	public void setNames(String firstName, String lastName) {
		this.firstName = firstName;
		this.lastName = lastName;
	}
	
	// Get names and print before swapping
	public void getNames() {
		System.out.println(this.firstName + " " + this.lastName);
	}
	
	// Append last name to first name
	public void joinNames() {
		this.names = this.firstName + this.lastName;
		System.out.println(this.names);
//		names.replaceAll("\\s", "");
	}
	
	// Swap names
	public void swapNames(String firstName, String lastName) {		
		// Save last name in first name variable
		this.lastName = firstName.substring(0, this.firstName.length() - this.lastName.length());
		// Save first name in last name variable
		this.firstName = lastName.substring(this.lastName.length());
		
		// Print out names after swapping
		System.out.println(this.firstName + " " + this.lastName);
	}
	
}
