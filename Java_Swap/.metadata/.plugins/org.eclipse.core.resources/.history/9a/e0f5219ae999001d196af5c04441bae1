package SwapStrings;

public class SwapConfig {

	// Declaration of variables
	String firstName, lastName, names;

	// Set names
	public void setNames(String firstName, String lastName) {
		this.firstName = firstName;
		this.lastName = lastName;
		this.names = this.firstName + " " + this.lastName;
	}
	
	// Get names and print before swapping
	public void getNames() {
		System.out.println(this.names);
	}
	
	// Join names as a single string
	public void joinNames() {
		this.names.replaceAll("\\s", "");
	}
	
	// Swap names
	public void swapNames() {
		// Store the length of names
		int lengthOfFirstName = this.firstName.length();
		int lengthOfLastName = this.lastName.length();
		
		// Replace last name with first name
		this.lastName = this.firstName.substring(lengthOfFirstName - lengthOfLastName);
		// Replace first name with last name
		this.firstName = this.firstName.substring(lengthOfLastName);
		
		// Print out names after swapping
		System.out.println(this.firstName + " " + this.lastName);
	}
	
}
