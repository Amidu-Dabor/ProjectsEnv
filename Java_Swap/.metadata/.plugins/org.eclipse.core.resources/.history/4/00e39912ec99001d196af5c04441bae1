package SwapStrings;

public class SwapConfig {

	// Declaration of variables
	String firstName, lastName;

	// Set names
	public void setNames(String firstName, String lastName) {
		this.firstName = firstName;
		this.lastName = lastName;
	}
	
	// Get names and print before swapping
	public void getNames() {
		System.out.println(this.firstName + " " + this.lastName);
	}
	
	// Append last name to first name
	public void joinNames() {
		this.firstName = this.firstName + this.lastName;
//		names.replaceAll("\\s", "");
	}
	
	// Swap names
	public void swapNames() {
		// Save the length of names
		int lengthOfFirstName = this.firstName.length();
		int lengthOfLastName = this.lastName.length();
		
		// Save last name in first name variable
		this.lastName = this.firstName.substring(0, lengthOfFirstName - lengthOfLastName);
		// Save first name in last name variable
		this.firstName = this.names.substring(lengthOfLastName);
		
		// Print out names after swapping
		System.out.println(this.firstName + " " + this.lastName);
	}
	
}
